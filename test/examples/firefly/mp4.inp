! This sample will execute the (T) part of MP4-SDTQ job on a GPU
! It requires at least four core system, otherwise it should be modified a bit

 $contrl scftyp=rhf mplevl=4 runtyp=energy icharg=-1 $end                       

! to use four CPU cores

 $system mwords=150 mklnp=4 np=4 $end

! to allow use of CUDA

 $smp cuda=.t. $end

! to request four GPU-controlling threads for the first CUDA device.
! Note, the line below is commented out because some CUDA drivers do not allow 
! use of several CPU threads per GPU.
!
! $cuda nthdev(1)=4 $end

! to disable concurrent use of CPU cores and GPUs

 $cuda nocpu=.t. $end

 $basis gbasis=n311 ngauss=6 npfunc=2 ndfunc=2 diffsp=.t. $end                  
 $scf dirscf=.t. $end                                                             
 $mp4 trpmet=12 sdtq=.t. $end                                 
